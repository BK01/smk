    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "https://localhost:8443/debug",
            "pathMapping": {
                "/": "${workspaceFolder}",
                "/dist/smk": "${workspaceFolder}/src/smk"
